# Application Settings
APP_NAME="Life Expectancy Prediction API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# API Settings
API_V1_PREFIX=/api/v1
API_RATE_LIMIT=100/hour
MAX_REQUEST_SIZE=10485760  # 10MB

# ML Model Settings
MODEL_PATH=./models/gradient_boosting_model.pkl
SCALER_PATH=./models/scaler.pkl
PREPROCESSOR_PATH=./models/preprocessor.pkl
MODEL_VERSION=1.0.0

# Redis Settings (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes

# Database Settings (optional - for future use)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/lifeexpectancy
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (Error Tracking - optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
